# Description: Quick-and-easy way to make procedure calls over the Internet.
# URL:         http://xmlrpc-c.sourceforge.net/
# Maintainer:  Lugaresi
# Depends on:  curl openssl

name=xmlrpc-c
version=1.51.03
release=1
svnrev=3018
source=(https://sourceforge.net/code-snapshots/svn/x/xm/$name/code/$name-code-r$svnrev-stable.zip)

build() {
    cd $name-code-r$svnrev-stable
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
    ./install-sh -c -m 755 xmlrpc-c-config $PKG/usr/bin/xmlrpc-c-config
}
