# Description: Python module to read/write popular video caption formats 
# URL: https://github.com/pbs/pycaption
# Maintainer: Brian Madonna, Bmadonnaster at gmail dot com
# Depends on: python3

name=python3-pycaption
version=1.0.1
release=1
source=(https://files.pythonhosted.org/packages/24/1f/dc3e07788a14ab287a5ec922490e1d646216e838d038ed3db23c1517ce59/pycaption-1.0.1.tar.gz)

build() {
	cd "${SRC}/pycaption-${version}"
 python3 setup.py install --prefix=/usr --root="${PKG}" --optimize=1
}
