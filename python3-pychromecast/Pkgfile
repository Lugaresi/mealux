# Description: Library for Python 3 to communicate with the Google Chromecast. 
# URL: https://github.com/balloob/pychromecast
# Maintainer: Brian Madonna, Bmadonnaster at gmail dot com
# Depends on: python python-netifaces python-6 python-setuptools

name=python3-pychromecast
version=3.0.0
release=1
source=(https://github.com/balloob/pychromecast/archive/${version}/pychromecast-$version.tar.gz)

build() {
	cd "${SRC}/pychromecast-${version}"
 python3 setup.py install --prefix=/usr --root="${PKG}" --optimize=1
}
