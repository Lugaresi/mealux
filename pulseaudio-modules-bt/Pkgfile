# Description:	Adds Sony LDAC, aptX, aptX HD, AAC codecs (A2DP Audio) support to PulseAudio on Linux 
# URL:		https://github.com/EHfive/pulseaudio-modules-bt
# Maintainer:	Stuka
# Depends on:   bluez5 ldacBT ffmpeg sbc

name=pulseaudio-modules-bt
version=1.3+git20200302
release=1
source=()

build() {
        git clone https://github.com/EHfive/pulseaudio-modules-bt
	cd pulseaudio-modules-bt
        git submodule update --init
        git checkout b02f9b621cfeaf72c8a0195073355420888d7238
        git -C pa/ checkout v`pkg-config libpulse --modversion|sed 's/[^0-9.]*\([0-9.]*\).*/\1/'`
	mkdir build
	cd build
	cmake .. \
		-DCMAKE_BUILD_TYPE=RELEASE \
		-DCMAKE_INSTALL_PREFIX=/usr 
	make
	make DESTDIR=$PKG install

}
