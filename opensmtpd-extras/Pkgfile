# Description: 
# URL:         https://www.opensmtpd.org
# Maintainer:  Isak Andersson, contact at bitpuffin dot com
#
# depends on: libevent libasr opensmtpd

name=opensmtpd-extras
version=201703132115
release=1
source=(
  https://www.opensmtpd.org/archives/$name-$version.tar.gz
  https://github.com/OpenSMTPD/OpenSMTPD-extras/commit/5bffdb3ad0bfa3f57250cb6a5f015cd42e44b464.diff
)

build() {
  cd $name-$version
  patch -p1 -i $SRC/5bffdb3ad0bfa3f57250cb6a5f015cd42e44b464.diff
  ./configure --prefix=/usr --libexecdir=/usr/lib --with-table-mysql --with-filter-stub --with-queue-ram --with-table-passwd
  make
  make DESTDIR=$PKG install
}
