# Description: Openswan is an IPsec implementation for Linux.
# URL:         https://www.openswan.org/
# Maintainer:  Lugaresi
# Depends on:  

name=openswan
version=2.6.51.2
release=1
source=(https://download.openswan.org/openswan/$name-$version.tar.gz)

build() {
    cd $name-$version
    sed -e s#/usr/local#/usr#g -i Makefile.inc
    make programs
    make DESTDIR=$PKG install
    mv $PKG/etc/rc.d/init.d/ipsec $PKG/etc/rc.d/ipsec
    rm -rf $PKG/etc/rc.d/init.d
}
