# Description: A CSS Cascading Style Sheets library for Python
# URL: https://pypi.python.org/pypi/cssutils/
# Maintainer: Daryl Fonseca, wyatt at prairieturtle dot ca
# Packager: Daryl Fonseca, wyatt at prairieturtle dot ca
# Depends on: python3-setuptools

name=python3-cssutils
version=1.0.2
release=1
source=(https://files.pythonhosted.org/packages/source/${name:8:1}/${name#*3-}/${name#*3-}-$version.tar.gz)

build() {
	cd ${name##python3-}-$version
	python3 setup.py build
	python3 setup.py install --prefix=/usr --root=$PKG
	mv $PKG/usr/bin/csscapture $PKG/usr/bin/csscapture3
	mv $PKG/usr/bin/csscombine $PKG/usr/bin/csscombine3
	mv $PKG/usr/bin/cssparse $PKG/usr/bin/cssparse3

}
