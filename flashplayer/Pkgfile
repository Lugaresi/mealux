# Description: NPAPI Implementation of Flash Player
# URL:         http://www.adobe.com/get/flashplayer
# Maintainer:  Stuka
# Packager:    Stuka
# Depends on: 

name=flashplayer
version=32.0.0.344
release=1
source=(https://fpdownload.adobe.com/get/flashplayer/pdc/$version/flash_player_npapi_linux.x86_64.tar.gz)
build () {
 cd $SRC
 mkdir -p $PKG/usr/bin/
 cp -r usr/bin/* $PKG/usr/bin/
 if [ -d /usr/lib/kde4 ]
  then
    mkdir -p $PKG/usr/lib $PKG/usr/lib64 $PKG/usr/share/kde4
    cp -r usr/lib/* $PKG/usr/lib/
    cp -r usr/lib64/* $PKG/usr/lib64/
    cp -r usr/share/kde4/* $PKG/usr/share/kde4/
 fi
 mkdir -p $PKG/usr/share/icons $PKG/usr/share/pixmaps $PKG/usr/share/applications
 cp -r usr/share/icons/ $PKG/usr/share/icons
 cp -r usr/share/pixmaps $PKG/usr/share/pixmaps
 cp -r usr/share/applications $PKG/usr/share/applications
 mkdir -p $PKG/usr/lib/mozilla/plugins
 cp libflashplayer.so $PKG/usr/lib/mozilla/plugins
 chmod a+x $PKG/usr/lib/mozilla/plugins/*
 chmod a+x $PKG/usr/bin/*
}
