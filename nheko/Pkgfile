# Description:	Desktop client for Matrix using Qt and C++14.
# URL:		https://github.com/Nheko-Reborn/nheko
# Maintainer:	Stuka
# Depends on:   qt5 qtkeychain openssl boost spdlog libolm lmdb nlohmann-json cmark libevent asciidoc

name=nheko
version=0.9.3
release=1
source=(https://github.com/Nheko-Reborn/$name/archive/v$version.tar.gz)
# source=(https://github.com/Nheko-Reborn/nheko/archive/100b5e0371f9485ec6fbbdc69a0efd9aa84d26d3.zip)

build() {
	mkdir hunter
	mkdir build
	cd build
	cmake ../$name-$version \
		-DCMAKE_BUILD_TYPE=RELEASE \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=OFF \
		-DHUNTER_ENABLED=ON \
		-DHUNTER_ROOT=$SRC/hunter \
		-DUSE_BUNDLED_OPENSSL=OFF \
		-DUSE_BUNDLED_SPDLOG=OFF \
		-DUSE_BUNDLED_OLM=OFF \
		-DUSE_BUNDLED_CMARK=OFF \
		-DUSE_BUNDLED_JSON=OFF \
		-DUSE_BUNDLED_LIBEVENT=OFF \
		-DUSE_BUNDLED_LIBCURL=OFF \
		-DUSE_BUNDLED_QTKEYCHAIN=OFF \
		-DUSE_BUNDLED_LMDB=OFF \
		-DVOIP=OFF \
		-DCOMPILE_QML=ON
	make
	make DESTDIR=$PKG install
	#Cleanup
	rm -rf $PKG/usr/{include,lib,lib64,share/man}/
}
