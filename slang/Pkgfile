# Description: 
# URL:         https://www.jedsoft.org/slang/
# Maintainer:  Stuka
#
# depends on:

name=slang
version=2.3.2
release=1
source=(
  https://www.jedsoft.org/releases/slang/$name-$version.tar.bz2
)

build() {
  cd $name-$version
  ./configure --prefix=/usr --mandir=/usr/man --sysconfdir=/etc --libexecdir=/usr/lib

  make
  make DESTDIR=$PKG install
}
